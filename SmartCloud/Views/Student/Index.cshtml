@model SmartCloud.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "Students";
}

<div class="container">
    @if (Model.hasClass.HasValue && Model.hasClass.Value)
    {
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalCenter">
            Add Student
        </button>
        <input type="number" class="class-id" style="display:none" value=@Model.ClassId.Value>
    }

</div>

<div class="container  " style="width:700px">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Class Id</th>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentList)
            {
                <tr>
                    <td>@item.StudentID</td>
                    <td>@item.StudentName</td>
                    <td>@item.Age</td>
                    <td>@item.ClassId</td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New Student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label for="exampleInputEmail1">Student Name</label>
                    <input type="text" class="form-control student-nume" placeholder="Enter student name" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Age</label>
                    <input type="number" class="form-control student-age" aria-describedby="emailHelp" placeholder="Age" required>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm  btn-outline-danger" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-sm  btn-outline-success btn-add-student" data-dismiss="modal">Create new</button>
            </div>

        </div>
    </div>
</div>
